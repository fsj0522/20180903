<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- toolbar溢出菜单的样式-->
    <style name="ToolbarPopurTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="actionOverflowButtonStyle"/>
    </style>

    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
    </style>
    <!--  去除默认的ActionBar-->
    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 设置溢出的三个点的颜色-->
        <item name="android:textColorSecondary">#ffffff</item>
    </style>

    <style name="CulText">
        <item name="android:padding">5dp</item>
        <item name="android:color">#fdf7c5</item>
    </style>

    <style name="ActivityDemoButton">
        <item name="android:textColor">#694E42</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="weixin_title_text">
        <item name="android:background">@color/colorGray</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="tab_weixin_menu_item">
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/tab_menu_weixin</item>
    </style>
</resources>
