<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:columnCount="4"
    android:orientation="horizontal"
    android:rowCount="7"
    tools:context=".CalculatorActivity">
    <TextView
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_columnSpan="4"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:background="#fdf7c5"
        android:textSize="36sp"
        android:layout_rowWeight="1"/>
    <TextView
        android:id="@+id/et_result"
        android:layout_width="match_parent"
        android:layout_columnSpan="4"
        android:layout_gravity="center_horizontal"
        android:layout_rowWeight="1"
        android:textSize="36sp"
        android:layout_marginBottom="5dp"
        android:background="#fdf7c5"/>
    <Button
        android:id="@+id/reZero"
        android:text="C"
        android:textSize="30sp"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:padding="5dp"
        android:background="@drawable/calculator_btn"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/delete"
        android:text="DEL"
        android:padding="5dp"
        android:textSize="30sp"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@drawable/calculator_btn"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/division"
        android:text="/"
        android:padding="5dp"
        android:textSize="30sp"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@drawable/calculator_btn"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/mutiplication"
        android:text="*"
        android:textSize="30sp"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@drawable/calculator_btn_num"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/seven"
        android:text="7"
        android:textSize="30sp"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/eight"
        android:text="8"
        android:textSize="30sp"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/nine"
        android:text="9"
        android:textSize="30sp"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/subtract"
        android:text="-"
        android:textSize="30sp"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@drawable/calculator_btn_num"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/four"
        android:text="4"
        android:textSize="30sp"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/five"
        android:text="5"
        android:textSize="30sp"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/six"
        android:text="6"
        android:textSize="30sp"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/add"
        android:text="+"
        android:textSize="30sp"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@drawable/calculator_btn_num"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/one"
        android:text="1"
        android:textSize="30sp"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/two"
        android:text="2"
        android:textSize="30sp"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/three"
        android:text="3"
        android:textSize="30sp"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/equal"
        android:text="="
        android:textSize="30sp"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_rowSpan="2"
        android:background="@drawable/calculator_btn_num"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/zero"
        android:text="0"
        android:textSize="30sp"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_columnSpan="2"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/dot"
        android:text="."
        android:textSize="30sp"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:onClick="onClick"/>
</GridLayout>